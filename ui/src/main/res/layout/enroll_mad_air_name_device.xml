<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/enroll_page_background"
    android:gravity="center_horizontal">

    <include
        android:id="@+id/enroll_title_id"
        layout="@layout/activity_enroll_title" />

    <TextView
        android:id="@+id/mad_air_device_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enroll_title_id"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/mad_air_enroll_name_device_title"
        android:textSize="14sp"/>

    <com.honeywell.hch.airtouch.ui.common.ui.view.HPlusEditText
        android:id="@+id/mad_air_device_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mad_air_device_name_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:maxLength="14"
        android:singleLine="true"/>

    <Button
        android:id="@+id/mad_air_confirm_btn"
        style="@style/blue_buton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="doClick"
        android:text="@string/enroll_next" />

</RelativeLayout>