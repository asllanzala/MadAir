<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="?android:attr/listPreferredItemHeight"
              android:background="@drawable/enroll_wifilist"
              android:orientation="horizontal"
              android:paddingRight="20dp">

    <TextView
        android:id="@+id/list_item_network_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:paddingLeft="35dp"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:focusable="false"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/list_item_network_lock_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:contentDescription="@null"
        android:focusable="false"
        android:src="@drawable/wifi_lock"/>

    <ImageView
        android:id="@+id/list_item_network_wifi_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@null"
        android:focusable="false"
        android:src="@drawable/wifi_signal3"/>

</LinearLayout>