<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="50dp">

    <FrameLayout
        android:id="@+id/emotion_itemt_ic_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp">

        <ImageView
            android:id="@+id/emotion_itemt_ic_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/emotion_air_ic" />

        <TextView
            android:id="@+id/emotion_item_ic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="25dp"
            android:text="Air"
            android:textColor="@color/emotion_device_blue"
            android:textSize="9sp" />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/emotion_data_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/emotion_itemt_ic_fl">

        <TextView
            android:id="@+id/emotion_device_title"
            style="@style/white_16sp_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/emotion_device_title_content"
            style="@style/white_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/emotion_device_title" />

        <RelativeLayout
            android:id="@+id/emotion_device_data_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emotion_device_title"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/emotion_data_tv"
                style="@style/white_50sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/emotion_scale_tv"
                style="@style/white_13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/emotion_data_tv"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/emotion_data_tv" />

            <ImageView
                android:id="@+id/emotion_device_type_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/emotion_scale_tv"
                android:src="@drawable/emotion_air_bottle" />
        </RelativeLayout>

        <TextView
            android:id="@+id/emotion_matter_tv"
            style="@style/white_13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emotion_device_data_rl"
            android:layout_marginTop="8dp"
            android:text="@string/emotion_particular_matters" />

        <ImageView
            android:id="@+id/emotion_short_sepetate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emotion_matter_tv"
            android:layout_marginRight="4dp"
            android:layout_marginTop="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/emotion_sepetater_short" />

    </RelativeLayout>

</RelativeLayout>